<div class="jumbotron">
  <h2><%= gettext "Play Gin Rummy!" %></h2>
  <p class="lead"></p>
</div>

<div class="row marketing">
  <div class="col-lg-12">
    <h3>Games</h3>
    <ul>
      <%= for game <- @conn.assigns.games do %>
        <li>
          <a href="<%= page_path(@conn, :show_game, game.id) %>"><%= game.name %></a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
